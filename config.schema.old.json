{
  "pluginAlias": "Tesla",
  "pluginType": "accessory",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "name",
        "type": "string",
        "required": true,
        "default": "Model S"
      },
      "vin": {
        "title": "VIN",
        "type": "string",
        "required": true,
        "default": ""
      },
      "refreshToken": {
        "title": "Tesla API Refresh Token",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Read the <a href='https://github.com/nfarina/homebridge-tesla'>documentation</a> to learn how to get a refresh token."
      },
      "prefix": {
        "title": "Services Prefix",
        "type": "string",
        "required": false,
        "default": "",
        "description": "Prefix for all services. Useful if you have multiple Tesla vehicles. Example: 'Climate' becomes 'Model S Climate'."
      },
      "waitMinutes": {
        "title": "Time in minutes to wait for the car to wake up (default is 1 minute)",
        "type": "integer",
        "default": 1,
        "maximum": 10,
        "minimum": 1,
        "required": false,
        "description": "Default is one (1) minute."
      },
      "latitude": {
        "title": "Latitude of HomeLink device",
        "type": "string",
        "required": false,
        "description": "This is the latitude position of your HomeLink device.",
        "default": ""
      },
      "longitude": {
        "title": "Longitude of HomeLink device",
        "type": "string",
        "required": false,
        "description": "This is the longitude position of your HomeLink device.",
        "default": ""
      },
      "disableDoors": {
        "title": "Disable Door Lock Service",
        "type": "boolean",
        "default": false
      },
      "disableSentryMode": {
        "title": "Disable Sentry Mode Service",
        "type": "boolean",
        "default": false
      },
      "sentryModeSwitch": {
        "title": "Sentry Mode Service as a Switch",
        "type": "boolean",
        "description": "This will configure Sentry Mode as a switch, instead of a lock.",
        "default": false
      },
      "disableClimate": {
        "title": "Disable Climate Control Service",
        "type": "boolean",
        "default": false
      },
      "disableDefrost": {
        "title": "Disable Defrost Control Service",
        "type": "boolean",
        "description": "If climate control service is disabled, this switch will also be disabled.",
        "default": false
      },
      "disableTrunk": {
        "title": "Disable Trunk Service",
        "type": "boolean",
        "default": false
      },
      "disableFrunk": {
        "title": "Disable Frunk Service",
        "type": "boolean",
        "default": false
      },
      "disableCharger": {
        "title": "Disable Charger Service",
        "type": "boolean",
        "default": false
      },
      "disableChargePort": {
        "title": "Disable Charge Port Service",
        "type": "boolean",
        "default": false
      },
      "disableStarter": {
        "title": "Disable Starter Service",
        "type": "boolean",
        "default": false
      },
      "enableHomeLink": {
        "title": "Enable HomeLink Service",
        "type": "boolean",
        "default": false
      },
      "disableChargeLevel": {
        "title": "Disable Charge Level Service",
        "type": "boolean",
        "default": false
      }
    }
  }
}